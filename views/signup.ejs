        <label for="email">Correo electrónico</label>
        <input id="email" type="email" name="email" placeholder="E-mail" required><br>

        <label for="password">Contraseña</label>
        <input id="password" type="password" name="password" placeholder="Contraseña" required><br>

        <label for="firstName">Nombres</label>
        <input id="firstName" type="text" name="firstName" placeholder="Nombres" required><br>

        <label for="lastName">Apellidos</label>
        <input id="lastName" type="text" name="lastName" placeholder="Apellidos" required><br>

        <label for="birth">Fecha de nacimiento</label>
        <input id="birth" type="date" name="birth" required><br>

