User
{
    id: ObjectID,
    username: String,
    email: String,
    password: String (encrypted),
    firstName: String,
    lastName: String,
    birth: Date,
    wishList: [
        {
            id: Game.id, 
            info: <Game info>
        }
    ],
    steamProfile: <Profile given by Steam API>,
    googleAccount: <Google SSO>,
    facebookAccount: <Facebook SSO>.
    createdAt: Date,
    updatedAt: Date
}

Game
{
    name: String,
    picture: String,
    price: {
      type: Number,
      default: 0
    },
    link: String
    createdAt: Date,
    updatedAt: Date
}

####### OLD #######
Game
{
    id: <Provider id given by its API>,
    name: String (may be given by an API),
    description: String (may be given by an API),
    gender: [ 
        {
            id: Gender.id,
            name: Gender.name
        }
    ],
    info: <Info about game given by an API, like price for example>
}
##############

Gender
{
    id: ObjectID,
    gamesIn: [ Game.id ]
    name: String
}
